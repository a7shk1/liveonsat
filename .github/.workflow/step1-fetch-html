name: step1-fetch-html

on:
  workflow_dispatch: {}
  # لاحقًا نفعّل الجدولة
  # schedule:
  #   - cron: "*/5 * * * *"

permissions:
  contents: write

jobs:
  fetch:
    runs-on: ubuntu-latest
    timeout-minutes: 10
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Fetch HTML
        run: |
          mkdir -p outputs
          python step1_fetch_html.py --out outputs

      - name: Upload artifact (raw HTML)
        uses: actions/upload-artifact@v4
        with:
          name: liveonsat-raw-html
          path: outputs/*.html
          retention-days: 3

      - name: Commit latest snapshot to repo (optional)
        uses: stefanzweifel/git-auto-commit-action@v5
        with:
          commit_message: "chore(step1): update raw_latest.html [skip ci]"
          file_pattern: outputs/raw_latest.html
